<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendOtpActivity"
    android:background="@color/white">

    <Button
        android:id="@+id/btn_back_send_otp"
        android:layout_width="50sp"
        android:layout_height="35sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/icon_btn_back" />

    <ImageView
        android:id="@+id/img_logo_send_otp"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_back_send_otp"
        android:src="@drawable/logo_send_otp"/>

    <TextView
        android:id="@+id/txt_notification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo_send_otp"
        android:layout_marginTop="34sp"
        android:text="OTP Verification"
        android:textSize="30sp"
        android:textColor="#0F1828"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_notification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_notification1"
        android:layout_marginTop="40sp"
        android:text="Enter Your Phone Number"
        android:textSize="26sp"
        android:textColor="#0F1828"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/editText_phone_SendOtp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_notification2"
        android:autofillHints="phone"
        android:background="@drawable/custom_input"
        android:maxLength="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:textColor="#0F1828"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_sendOtp"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="130sp"
        android:layout_marginBottom="40sp"
        android:background="@drawable/button_styles"
        android:text="Send OTP"
        android:textColor="#F7F7FC"
        android:textSize="20sp" />


</RelativeLayout>